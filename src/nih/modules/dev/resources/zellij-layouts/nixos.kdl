layout {
    cwd "~/workspace/nixos"
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        children
        pane size=1 borderless=true {
            plugin location="status-bar"
        }
    }
    tab name="hx" {
        pane command="hx"
    }
    tab name="update" {
        pane name="switch" {
            command "sudo"
            args "nixos-rebuild" "--flake" ".#legion" "switch"
            start_suspended true
        }
        pane name="boot" {
            command "sudo"
            args "nixos-rebuild" "--flake" ".#legion" "boot"
            start_suspended true
        }
        pane name="upgrade" {
            command "sh"
            args "-c" "'nix flake update && npins update'"
            start_suspended true
        }
    }
    tab name="qa" {
        pane name="statix" {
        command "statix"
        args "check" "-i" ".direnv"
        start_suspended true
    }
    pane name="deadnix" {
        command "deadnix"
        start_suspended true
    }
    pane name="nixf-diagnose" {
        command "nu"
        args "-c" "nixf-diagnose ...(glob **/*.nix | where {|e| $e !~ 'sources/npins/default.nix'})"
        start_suspended true
    }
    pane name="treefmt" {
        command "treefmt"
        args "src" "flake.nix"
        start_suspended true
    }
    }
    tab name="strider" {
        pane split_direction="vertical" {
            pane size="60%"
            pane size="40%" {
                plugin location="strider"
            }
        }
    }
}
